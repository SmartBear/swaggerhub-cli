{
  "hooks": {
    "before:bump": [
      "echo BEFORE BUMP SECTION ACTION" 
    ],
    "after:bump": ["npm run build"],
    "after:release": "export GIT_TAG=v${version} && echo GIT_TAG=v${version} > release-github/.version"
  },
  "git": {
    "requireUpstream": false,
    "changelog": "./release-github/get-changelog.sh",
    "commitMessage": "release: v${version}",
    "tagName": "v${version}",
    "push": false
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN",
    "releaseName": "SwaggerHub CLI %s Released!",
    "draft": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
